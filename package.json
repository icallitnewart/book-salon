{
  "name": "book-salon",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "prepare": "husky install"
  },
  "lint-staged": {
    "client/**/*.{js,jsx,ts,tsx}": [
      "npm --prefix client run lint:fix",
      "npm --prefix client run prettier"
    ],
    "server/**/*.{js,ts}": [
      "npm --prefix server eslint --fix",
      "npm --prefix server prettier --write"
    ]
  },
  "devDependencies": {
    "husky": "^8.0.0",
    "lint-staged": "^15.2.5"
  }
}
